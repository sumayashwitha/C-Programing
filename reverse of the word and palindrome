#include<stdio.h>
int main(void){
    int n,original,reverse=0,digit;
    printf("enter the number:");
    scanf("%d", &n);
    original=n;
    while(n>0){
         digit=n%10;
         reverse=reverse*10+ digit;
         n=n/10;
    }
    printf("the reverse number of %d is %d\n", original, reverse);
    if(original==reverse){
          printf("%d is the palindrome\n", original);
    }else{
          printf("%d is not the palindrome\n", original);
   }
  return 0;
}

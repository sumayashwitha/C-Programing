#include<stdio.h>
int main(void){
    int s,n,i,j,k=1;
    printf("enter the number of rows:");
    scanf("%d", &n);
    for(i=1;i<=n;i++){
           for(s=1;s<=n-i;s++){
                 printf(" ");
           }
              for(j=1;j<=i;j++){
                  printf("%3d",k++);
              }
            printf("\n");
     }
 return 0;
}

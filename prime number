#include<stdio.h>
int main(void){
    int num,i;
    printf("enter the number:");
    scanf("%d", &num);
    if(num<=1){
        printf("the %d is not a prime\n", num);
        return 0;
    }
     for(i=2;i<num;i++){
            if(num%i==0){
               printf("the %d is not prime\n", num);
                return 0;
            }else{
                printf("%d is a prime number", num);
                break;
            }  
     }
      return 0;
}
